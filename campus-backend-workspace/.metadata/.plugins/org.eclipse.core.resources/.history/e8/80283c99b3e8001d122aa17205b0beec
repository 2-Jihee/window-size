import java.util.Scanner;

public class View {
    Scanner sc;

    public View() {
        this.sc = new Scanner(System.in);
    }

    public int getDan() {
        while(true) {
            System.out.print("출력할 단을 입력하세요.(1~999): ");
            int num = sc.nextInt();
            if(num <= 0 || num >= 1000) {
            	System.out.println("유효하지 않은 숫자입니다.");
            } else {
            	break;
            }
        }
        return dan;
    }

    public void printResult(int dan) {
        System.out.println(dan + "단 입니다.");
        for (int i = 1; i < 10; i++) {
            System.out.println(dan + " * " + i + " = " + dan * i);
        }
    }
}
